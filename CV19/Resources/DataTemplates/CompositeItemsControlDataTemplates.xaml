<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:deconat="clr-namespace:CV19.Models.Deconat"
                    xmlns:sys="clr-namespace:System;assembly=System.Runtime">
    <DataTemplate DataType="{x:Type sys:Int32}">
        <TextBlock Text="{Binding StringFormat=число {0}}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type sys:String}">
        <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30">
                                    <Run Foreground="Red" FontWeight="Bold">Строка:</Run> <TextBlock Text="{Binding}"/>
                                 </TextBlock>
    </DataTemplate>
    <DataTemplate DataType="{x:Type deconat:Group}">
        <TextBlock Text="{Binding Name}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type deconat:Student}">
        <TextBlock Text="{Binding Name, StringFormat='Студент {0}'}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30"/>
    </DataTemplate>
</ResourceDictionary>